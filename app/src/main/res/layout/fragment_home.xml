<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Insta-sztori karik치k -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/topButtonRecycler"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="43dp"
            android:orientation="horizontal"
            android:overScrollMode="never" />

        <!-- T치bl치zatok szekci칩 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tableTitle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/tables"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp" />

            <Button
                android:id="@+id/moreTablesButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/more"
                android:textColor="@android:color/white"
                android:background="@drawable/button_white_border"
                android:textStyle="bold"
                android:paddingHorizontal="12dp" />
        </LinearLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/tablePager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal" />

        <!-- News blokk -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/newsTitle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/news"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp" />

            <Button
                android:id="@+id/moreNewsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/more"
                android:textColor="@android:color/white"
                android:background="@drawable/button_white_border"
                android:textStyle="bold"
                android:paddingHorizontal="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/newsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/newsRecycler"
            android:layout_width="match_parent"
            android:layout_height="850dp"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            android:layout_marginBottom="16dp"
            android:clipToPadding="false"/>

    </LinearLayout>
</ScrollView>