<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for the splash screen displayed before loading the main content -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.news.SplashActivity">

    <!-- Centered layout containing logo, app name, and loading indicator -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <!-- App logo displayed at the center of the splash screen -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/baseline_newspaper_24"
            android:id="@+id/logo"/>

        <!-- App name displayed below the logo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="30sp"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="@color/white"/>

        <!-- Indeterminate loading spinner -->
        <ProgressBar
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="20dp"
            android:indeterminateTint="@color/white"/>

    </LinearLayout>

    <!-- Placeholder for fragment content that may be loaded after the splash -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>