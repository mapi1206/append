<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.tabella.TabellaFragment">

    <!-- Hidden container for dynamically inserted fragments -->
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:visibility="gone" />

    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Buttons for switching between the two tables -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="start"
                android:layout_marginTop="45dp"
                android:layout_marginBottom="0dp">

                <Button
                    android:id="@+id/btn8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:text="@string/mb1" />

                <Button
                    android:id="@+id/btn9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:text="@string/euroleague" />
            </LinearLayout>

            <!-- Vertical ScrollView containing the entire table section -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="true">

                <!-- Horizontal ScrollView for scrolling table content sideways -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:padding="0dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <!-- TableLayout 1 -->
                        <TableLayout
                            android:id="@+id/teamTableLayout1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:stretchColumns="1,2,3,4"
                            android:background="@drawable/table_border">

                            <TableRow android:background="@drawable/table_border">
                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:padding="12dp"
                                    android:text="@string/h"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:gravity="center"
                                    android:textColor="@android:color/white"
                                    android:background="@drawable/table_border" />
                                <TextView
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:padding="12dp"
                                    android:text="@string/csapat"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:gravity="center"
                                    android:textColor="@android:color/white"
                                    android:background="@drawable/table_border" />
                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:padding="12dp"
                                    android:text="@string/m"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:gravity="center"
                                    android:textColor="@android:color/white"
                                    android:background="@drawable/table_border" />
                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:padding="12dp"
                                    android:text="@string/gy"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:gravity="center"
                                    android:textColor="@android:color/white"
                                    android:background="@drawable/table_border" />
                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:padding="12dp"
                                    android:text="@string/v"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:gravity="center"
                                    android:textColor="@android:color/white"
                                    android:background="@drawable/table_border" />
                            </TableRow>
                        </TableLayout>

                        <!-- TableLayout 2 -->
                        <TableLayout
                            android:id="@+id/teamTableLayout2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:stretchColumns="1,2,3,4"
                            android:background="@drawable/table_border">

                            <TableRow android:background="@drawable/table_border">
                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:padding="12dp"
                                    android:text="@string/h"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:gravity="center"
                                    android:textColor="@android:color/white"
                                    android:background="@drawable/table_border" />
                                <TextView
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:padding="12dp"
                                    android:text="@string/csapat"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:gravity="center"
                                    android:textColor="@android:color/white"
                                    android:background="@drawable/table_border" />
                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:padding="12dp"
                                    android:text="@string/m"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:gravity="center"
                                    android:textColor="@android:color/white"
                                    android:background="@drawable/table_border" />
                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:padding="12dp"
                                    android:text="@string/gy"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:gravity="center"
                                    android:textColor="@android:color/white"
                                    android:background="@drawable/table_border" />
                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:padding="12dp"
                                    android:text="@string/v"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:gravity="center"
                                    android:textColor="@android:color/white"
                                    android:background="@drawable/table_border" />
                            </TableRow>
                        </TableLayout>

                    </LinearLayout>
                </HorizontalScrollView>
            </ScrollView>
        </LinearLayout>
    </androidx.drawerlayout.widget.DrawerLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>