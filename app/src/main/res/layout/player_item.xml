<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for displaying player information in a table row -->
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:gravity="center_vertical">
    <TableRow>
        <!-- Player name displayed in bold -->
        <TextView
            android:id="@+id/playerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <!-- Player age displayed next to the name -->
        <TextView
            android:id="@+id/playerAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"/>

        <!-- Player's team losses count -->
        <TextView
            android:id="@+id/teamLosses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"/>

        <!-- Total number of matches played -->
        <TextView
            android:id="@+id/teamMatches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mérkőzések: 0"
            android:textSize="16sp"
            android:visibility="visible"/>
    </TableRow>
</TableLayout>