<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_home">

    <!-- Home fragment -->
    <fragment
        android:id="@+id/navigation_home"
        android:name="wifi.svdew.myapplication.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_navigation_home_to_storyViewerFragment"
            app:destination="@id/storyViewerFragment" />
        <!-- Action: Home → News -->
        <action
            android:id="@+id/action_navigation_home_to_navigation_notifications"
            app:destination="@id/navigation_notifications" />

        <!-- Action: Home → Tabella -->
    <action
        android:id="@+id/action_navigation_home_to_navigation_tabella"
        app:destination="@id/navigation_dashboard" />
    </fragment>

    <!-- News fragment -->
    <fragment
        android:id="@+id/navigation_notifications"
        android:name="wifi.svdew.myapplication.ui.news.NewsFragment"
        android:label="News"
        tools:layout="@layout/fragment_news" />
    <!-- Tables fragment -->
    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="wifi.svdew.myapplication.ui.tabella.TabellaFragment"
        android:label="Tables"
        tools:layout="@layout/fragment_tabella" />
    <fragment
        android:id="@+id/storyViewerFragment"
        android:name="wifi.svdew.myapplication.ui.home.StoryViewerFragment"
        android:label="StoryViewerFragment"
        tools:layout="@layout/fragment_story_viewer" />
</navigation>
